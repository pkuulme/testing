<%= form_for(post, url: url) do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-3">

        <div class="card" style="width: 15 rem;">
          <div class="card-block">
            <h4 class="card-title"><%= yield(:page_title) %></h4>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <div class="field">
                <%= f.label :title %>
                <%= f.text_field :title, class: 'form-control' %>
              </div>    
            </li>
            <li class="list-group-item">
              <div class="field">
                <%= f.label :banner_image_url %>
                <%= f.text_field :banner_image_url, class: 'form-control' %>
              </div>
            </li>
            <li class="list-group-item">
              <div class="field">
                <%= f.label :description %>
                <%= f.text_area :description, class: 'form-control' %>
              </div>
            </li>
          </ul>
        </div>
        <li class="list-group-item">
              <div class="actions">
                <%= f.submit "Submit", class: 'btn btn-lg btn-success'  %>
              </div>
            </li>
          <% if @post.persisted? %>
          <%= link_to 'Show', @post %> 
          <% end %>
          <%= link_to 'Back', authors_posts_path %>
      </div>
      
      <div class="col-md-9">
      
        <div class="field"> 
          <%= f.text_area :body %>
        </div>
      </div>
  </div>


<% end %>
